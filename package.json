{
    "name": "automation-store",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "build": "npm run clean && parcel build --no-optimize --no-scope-hoist ./src/view/index.pug && parcel serve --no-hmr",
        "clean": "rimraf dist && rimraf ./.parcel-cache",
        "dev": "npm run clean && parcel --port 9999 ./src/view/index.pug",
        "lint": "eslint ./**/*.js --fix && stylelint ./**/*.scss",
        "server": "babel-node ./server/server.js",
        "start": "nodemon --watch ./package.json --exec npm run dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/smlee98/automation-store.git"
    },
    "author": "Seungmin Lee",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/smlee98/automation-store/issues"
    },
    "homepage": "https://github.com/smlee98/automation-store#readme",
    "dependencies": {
        "@yaireo/tagify": "^4.17.6",
        "ace-builds": "^1.14.0",
        "express": "^4.18.2",
        "parcel-namer-custom": "^0.2.0",
        "pretendard": "^1.3.6"
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@parcel/transformer-pug": "^2.8.2",
        "@popperjs/core": "^2.11.6",
        "@prettier/plugin-pug": "^2.3.0",
        "autoprefixer": "^10.4.13",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-standard": "^17.0.0",
        "nodemon": "^2.0.20",
        "parcel": "^2.8.2",
        "postcss": "^8.4.21",
        "prettier": "^2.8.2",
        "tailwindcss": "^3.2.6"
    },
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "parcel-namer-custom": {
        "main.js$": "js/main.[type]",
        "styles.scss$": "css/styles.[type]",
        "favicon.ico$": "favicon.[type]",
        ".scss$": "css/[name].[type]",
        ".css$": "css/[name].[type]",
        ".js$": "js/[name].[type]",
        ".ttf$": "fonts/[name].[type]",
        ".woff$": "fonts/[name].[type]",
        ".woff2$": "fonts/[name].[type]",
        ".png$": "images/[folder]/[name].[type]",
        ".svg$": "images/[folder]/[name].[type]"
    }
}
